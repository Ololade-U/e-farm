generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  hashedPassword String
  role           Role     @default(BUYER)
  country        String
  storeName      String?
  fullName       String?
  phoneNumber    String?
  registeredAt   DateTime @default(now())
}

enum Role {
  FARMER
  BUYER
}
